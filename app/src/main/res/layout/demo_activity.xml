<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		>

	<TableLayout
			android:id="@+id/table_layout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="18dp"
			android:layout_centerInParent="true"
			>

		<TableRow
				android:gravity="center_vertical"
				>

			<Button
					android:id="@+id/set_button_position_prev"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/btn_prev"
					style="@style/Widget.AppCompat.Button.Small"
					/>

			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					>

				<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="@string/option_button_position"
						android:gravity="center"
						style="@style/TextAppearance.AppCompat.Body1"
						/>

				<TextView
						android:id="@+id/button_position"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center"
						style="@style/TextAppearance.AppCompat.Small"
						/>

			</LinearLayout>

			<Button
					android:id="@+id/set_button_position_next"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/btn_next"
					style="@style/Widget.AppCompat.Button.Small"
					/>

		</TableRow>

		<TableRow
				android:gravity="center_vertical"
				>

			<Button
					android:id="@+id/set_button_background_colour_prev"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/btn_prev"
					style="@style/Widget.AppCompat.Button.Small"
					/>

			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					>

				<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="@string/option_button_background_colour"
						android:gravity="center"
						style="@style/TextAppearance.AppCompat.Body1"
						/>

				<TextView
						android:id="@+id/button_background_colour"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center"
						style="@style/TextAppearance.AppCompat.Small"
						/>

			</LinearLayout>

			<Button
					android:id="@+id/set_button_background_colour_next"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/btn_next"
					style="@style/Widget.AppCompat.Button.Small"
					/>

		</TableRow>

		<TableRow
				android:gravity="center_vertical"
				>

			<Button
					android:id="@+id/set_button_icon_prev"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/btn_prev"
					style="@style/Widget.AppCompat.Button.Small"
					/>

			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					>

				<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="@string/option_button_icon"
						android:gravity="center"
						style="@style/TextAppearance.AppCompat.Body1"
						/>

				<TextView
						android:id="@+id/button_icon"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center"
						style="@style/TextAppearance.AppCompat.Small"
						/>

			</LinearLayout>

			<Button
					android:id="@+id/set_button_icon_next"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/btn_next"
					style="@style/Widget.AppCompat.Button.Small"
					/>

		</TableRow>

	</TableLayout>

	<uk.co.markormesher.android_fab.FloatingActionButton
			android:id="@+id/fab"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			/>

</RelativeLayout>

div.x_panel
	div.x_title
		h2
			i.fa.fa-fw.fa-bank.text-muted.title-icon
			| Account Balances
		div.clearfix

	div.x_content
		- var sum = 0
		- var empty = true
		for ab in accountBalances
			if ab.balance != 0
				- sum += ab.balance
				- empty = false
				p
					=ab.account_name
					span.pull-right= formatters.formatCurrency(ab.balance)

		if (empty)
			p: i No accounts
		div.hr: hr
		p
			strong Total
			strong.pull-right= formatters.formatCurrency(sum)

mixin row(label, value, strong)
	- strong = strong || false
	p(style = 'margin-left: 10px')
		if (strong)
			strong= label
			strong.pull-right= formatters.formatCurrency(value)
		else
			= label
			span.pull-right= formatters.formatCurrency(value)

div.x_panel
	div.x_title
		h2
			i.fa.fa-fw.fa-exchange.text-muted.title-icon
			| Month Summary
		div.clearfix

	div.x_content

		h4 Income
		- blank = true
		for row in summaryData['income']
			- blank = false
			+row(row['categoryName'], row['balance'])
		if (summaryData['otherIn'] != 0)
			- blank = false
			+row('All other income', summaryData['otherIn'])
		if (blank)
			p.text-muted: i No income


		h4 Expenses
		- blank = true
		for row in summaryData['expense']
			- blank = false
			+row(row['categoryName'], row['balance'])
		if (summaryData['otherOut'] != 0)
			- blank = false
			+row('All other expenses', summaryData['otherOut'])
		if (blank)
			p.text-muted: i No expenses


		div.hr: hr
		+row('Total', summaryData['totalFlow'], true)


		// designed for more 'other' summary items to be added
		- hasOther = false
		- if (summaryData['movedToSavings'] != 0) hasOther = true

		if (hasOther)
			div.hr: hr
			h4 Other
			if (summaryData['movedToSavings'] != 0)
				+row('Moved to savings', summaryData['movedToSavings'])

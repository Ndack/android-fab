extends ../_shared/page-layout

block page-body

	- user = locals.user

	form.validate(action = '/users/profile', method = 'post')
		div.row
			div.col-xs-12.col-sm-6.col-md-3.form-group
				label(for = 'first_name') First Name:
				input#first_name.form-control(name = 'first_name', type = 'text', maxlength = 80, required = true, value = user.first_name)

			div.col-xs-12.col-sm-6.col-md-3.form-group
				label(for = 'last_name') Last Name:
				input#last_name.form-control(name = 'last_name', type = 'text', maxlength = 80, required = true, value = user.last_name)

		div.row
			div.col-xs-12.col-sm-6.col-md-3.form-group
				label(for = 'new_password') New Password:
				input#new_password.form-control(name = 'new_password', type = 'password', minlength = 8)

			div.col-xs-12.col-sm-6.col-md-3.form-group
				label(for = 'new_password_again') Repeat New Password:
				input#new_password_again.form-control(name = 'new_password_again', type = 'password', minlength = 8, data-rule-equalTo="#new_password")

		div.row
			div.col-xs-12.col-sm-6.col-md-3.form-group
				label(for = 'current_password') Current Password:
				input#current_password.form-control(name = 'current_password', type = 'password')
				span.small.text-muted Only required if setting a new password.

		div.row
			div.col-xs-12
				button.btn.btn-success
					i.fa.fa-save
					| &nbsp;&nbsp;
					| Save

block page-scripts
	script(src = '/_vendor/jquery-validation/jquery.validate.min.js')
	script(src = '/_shared/form-validation.js')

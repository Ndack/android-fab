extends ../../_shared/page-layout

block page-body

	- category = category || {}

	form.validate(action = '/settings/categories/edit/' + (category.id || 0), method = 'post')
		div.row
			div.col-xs-12.col-sm-6
				div.form-group
					label(for = 'name') Name:
					input#name.form-control(placeholder = 'e.g. Public Transport', name = 'name', type = 'text', maxlength = 80, required = true, value = category.name || '')

				div.form-group
					button.btn.btn-success
						i.fa.fa-save
						| &nbsp;&nbsp;
						| Save

block page-scripts
	script(src = '/_vendor/jquery-validation/js/jquery.validate.min.js')
	script(src = '/_shared/js/form-validation.js')

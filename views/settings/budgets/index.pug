extends ../../_shared/page-layout

block page-head
	link(rel = 'stylesheet', href = '/_vendor/datatables/css/dataTables.bootstrap.min.css')

block page-title-extra
	button.btn.btn-info.clone-btn(disabled = 'disabled')
		i.fa.fa-fw.fa-copy
		|  Clone Selected

	a.btn.btn-success(href = '/settings/budgets/create')
		i.fa.fa-fw.fa-plus
		|  Create Budget

block page-body

	div.row: div.col-xs-12
		div.checkbox.text-right: label
			input#active-only(type = 'checkbox', checked = 'checked')
			| Active budgets only

	div.row: div.col-xs-12
		table#budgets.table.table-condensed.table-hover
			thead
				tr
					th Name
					th Term
					th Amount
					th Actions

	include clone-modal

block page-scripts
	script(src = '/_vendor/datatables/js/jquery.dataTables.min.js')
	script(src = '/_vendor/datatables/js/dataTables.bootstrap.min.js')
	script(src = '/_vendor/jquery-validation/jquery.validate.min.js')
	script(src = '/_shared/form-validation.js')
	script(src = '/settings/budget-quick-dates.js')
	script(src = '/settings/budgets.js')
